<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body>
<%- include('../partials/headerNavbar') %> 

    <div class = "card-wrapper">
      <div class = "card">
        <!-- card left -->
        <div class = "product-imgs">
          <div class = "img-display">
            <div class = "img-showcase">
              <img src = "/images/products/<%= product.image %>">
              <img src = "/images/products/producto2.png" >
              <img src = "/images/products/producto2.png">
              <img src = "/images/products/producto2.png">
            </div>
          </div>

          <h2>Productos relacionados</h2>
          
          <div class = "img-select">

            <div class = "img-item">
              <a href = "#" data-id = "1">
                <img src = "/images/products/producto2.png" alt = "shoe image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "#" data-id = "2">
                <img src = "/images/products/producto2.png" alt = "shoe image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "#" data-id = "3">
                <img src = "/images/products/producto2.png" alt = "shoe image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "#" data-id = "4">
                <img src = "/images/products/producto2.png" alt = "shoe image">
              </a>
            </div>

          </div>
        </div>
        <!-- card right -->
        <div class = "product-content">
          <h2 class = "product-title"><%= product.product_name %></h2>
          <div class = "product-rating">
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star-half-alt"></i>
            <span>4.7(21)</span>
          </div>

          <div class = "product-price">
            <p class = "price">Precio: <span> $ <%= product.price %></span></p>
          </div>

          <div class = "product-detail">
            <h2>Sobre el producto: </h2>
            <p><%= product.description %></p>
            <ul>
              <li>Unidades: <span>6</span></li>
              <li>Available: <span>Stock</span></li>
              <li>Tipo: <span><%= product.style %></span></li>
              <li>Medidas: <span><%= product.volumen %></span></li>
              <li>Envio: <span>Free</span></li>
            </ul>
          </div>

          <div class = "purchase-info">
            <input class="input-detail" type = "number" min = "0" value = "1">
            <button type = "button" class = "btn">
              <i class = "fas fa-shopping-cart"></i>
              Comprar
            </button>
          </div>
        </div>
      </div>
    </div>
  
<%- include('../partials/footer') %>
</body>
</html>