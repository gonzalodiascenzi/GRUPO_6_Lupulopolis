<!DOCTYPE html>
<html>
  <%- include('../partials/head') %> 
  <body>
    <%- include('../partials/headerNavbar') %> 
    <div id="wrapper" >
      <div>
        <h1 class="logo-text"><span>Lupulo</span>polis</h1>
        <h2>A World of Beers.</h2>
      </div>
      <form action="/users/register" method="POST" enctype="multipart/form-data">
        <% if(typeof errors !== 'undefined') {%>
          <ul>
            <% for(error of errors) {%>
              <li><%= error.msg %></li>
            <% } %> 
          </ul>
        <% } %> 
        <div id="inputs">
          <div>
            <input name="first_name" class="first_name" type="text" placeholder="Nombre">
            <small class="first_name_error invisible">Campo first name obligatorio</small>
            <input name="last_name" class="last_name" type="text" placeholder="Apellido">
            <small class="last_name_error invisible">Campo first name obligatorio</small>
            <input name="image" class="image" type="file">
            <small class="image_error invisible">Campo first name obligatorio</small>
            <input name="email" class="email" type="text" placeholder="email" >
            <small class="emailError invisible"> Campo email es obligatorio </small>
            <input name="password" class="password" type="password" placeholder="Password">
            <small class="passwordError invisible"> Campo password es obligatorio </small>
            <input name="retype" class="retype" type="password" placeholder="repeat password">
            <small class="retype_error invisible">Campo first name obligatorio</small>       
          </div>
          
         <input type="submit" value="register">
        <p></p>
        </div>
        <div id="labels">
          <label for="register">Already registed? <a href="/users/login"><span>Log In</span></a></label>
        </div>
      </form>
    </div>
    <%- include('../partials/footer') %> 
  </body>
</html>
